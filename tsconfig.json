{
	"compilerOptions": {
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"module": "commonjs",
		"target": "es6",
		"declaration": true,
		"declarationDir": "./dist",
		"skipLibCheck": true,
		"typeRoots": ["node_modules/@types", "local-types"]
	},
	"exclude": ["node_modules", "./src/**/*.test.ts"],
	"include": ["./src/**/*"]
}
